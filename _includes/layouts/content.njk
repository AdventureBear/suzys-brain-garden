---
layout: layouts/base.njk
section: content
---

<div class="flex w-full justify-center">
    <div class="px-6 md:px-6 lg:px-8 xl:px-12 w-full max-w-5xl">
        <div class="wrapper flex justify-between">
            {% if site.enableTOC and toc %}
            <div class="main flex flex-col pr-0 xl:pr-64 prose sm:prose lg:prose-lg xl:prose-md">
            {% else %}
             <div class="main  flex flex-col pr-0 prose sm:prose lg:prose-lg xl:prose-md">
            {% endif %}
                <article>
                <h2 class="mt-0" style="color: var(--color-text);">{{ title }}</h2>
                <div class="text-sm mb-6" style="color: var(--color-text-secondary);">
                    <div>Published <time datetime="{{ page.date | machineDate }}">{{ page.date | readableDate }}</time></div>
                    {% if prompt %}
                    <div>Prompt: {{ prompt }}</div>
                    {% endif %}
                </div>
                <div class="self-center adjust" style="color: var(--color-text);">
                    {{ content | safe }}
                    {% if (site.enableComments) and (comments !== 0) %}
                        <!-- Paste your comment code here! -->
                    {% endif %}

                    {% if site.enablePageNavigation == true %}
                     <ul class="footer-nav pt-4 mb-8  ml-0 pl-0 flex flex-wrap flex-row-reverse  justify-between mt-8 list-none">
                     {%- set nextPage = collections.menuItems | getNextCollectionItem(page) %}
                     {%- if nextPage %}<li class="ml-0 pl-0"><a class="font-semibold" style="color: var(--color-text-secondary);" href="{{ nextPage.url | url }}">{% if nextPage.data.eleventyNavigation.title %}{{  nextPage.data.eleventyNavigation.title }}{% else %}{{  nextPage.data.eleventyNavigation.key }}{% endif %}</a> <svg height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--color-text-secondary);" class="inline ml-1 flex-shrink-0"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg></li>{% endif %}
                     {%- set previousPage = collections.menuItems | getPreviousCollectionItem(page) %}
                     {%- if previousPage %}<li class="ml-0 pl-0"><svg height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--color-text-secondary);" class="transform rotate-180 inline mr-1 flex-shrink-0">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                     <a class="font-semibold" style="color: var(--color-text-secondary);" href="{{ previousPage.url | url }}">
                    {% if previousPage.data.eleventyNavigation.title %}{{  previousPage.data.eleventyNavigation.title }}{% else %}{{  previousPage.data.eleventyNavigation.key }}{% endif %} </a> </li>{% endif %}
                    </ul>
                    {% endif %}
                </div>
                </article>
            </div>

            {% if site.enableTOC and toc %}
            <div class="font-semibold hidden xl:block sidebar sticky right-0 mt-12 -ml-56 w-56 h-full top-48" style="color: var(--color-text-secondary);">
            <small>ON THIS PAGE</small><br />
                <aside class="font-normal">
                {{ content | toc | safe }}
                </aside>
            </div>
            {% endif %}
        </div>
    </div>
</div>


