{% set navPages = collections.all | eleventyNavigation  %}

{% macro renderNavListItem(entry,rel) -%}

  {% if entry.url == page.url or entry.title == eleventyNavigation.parent or entry.title == eleventyComputed.key%}
    {% if rel == "child" %}
      {% set highlight = 'font-semibold' %}
    {% else %}
      {% set highlight = 'font-semibold' %}
    {% endif %}
    {% set current = 'aria-current="page"' %}
  {% else %}
    {% set highlight = '' %}
    {% set current = '' %}
  {% endif %}

{%- if not entry.children.length  -%}
  {% if rel == "child" %}
   <a class="w-max
    rounded
    px-4 py-2
    block
    text-base bg-transparent
    md:mt-0
    m-0
    hover:font-bold
    focus:outline-none focus:ring {{ highlight }}"
    style="color: var(--color-text-secondary); font-family: 'Courier New', Courier, monospace;"
    href="{{ entry.url | url }}">{{ entry.title }}</a>
  {% else %}
   <a class="w-max
    px-4 py-3
    rounded
    block
    text-sm
    bg-transparent
    rounded-lg
    md:mt-0
    focus:outline-none
    focus:ring {{ highlight }}"
    style="color: var(--color-text-secondary); font-family: 'Courier New', Courier, monospace;"
    href="{{ entry.url | url }}">{{ entry.title }}</a>
  {% endif %}
 
  {%- else -%}
   
    {%- if entry.children.length -%}

    <div @click.away="open = false" class="relative" x-data="{ open: false }">
        <button  @click="open = !open"
        class="whitespace-nowrap flex flex-row items-center w-full lg:mr-2 px-4 py-2 mt-2 text-sm text-left bg-transparent rounded-lg md:w-auto md:inline md:mt-0 md:ml-4 hover:font-semibold focus:outline-none focus:ring {{ highlight }}"
        style="color: var(--color-text-secondary); font-family: 'Courier New', Courier, monospace;">
          <span>{{ entry.title }}</span>
          <svg fill="currentColor" viewBox="0 0 20 20" :class="{'rotate-180': open, 'rotate-0': !open}" class="inline w-4 h-4 mt-1 ml-1 transition-transform duration-200 transform md:-mt-1"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </button>
        <div x-show="open" x-transition:enter="transition ease-out duration-100" x-transition:enter-start="transform opacity-0 scale-95" x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-75" x-transition:leave-start="transform opacity-100 scale-100" x-transition:leave-end="transform opacity-0 scale-95" class="shadow absolute rounded-lg top-8 w-max ml-4 mt-2" style="background-color: var(--color-bg);">
          <div class="py-2 w-max pr-12" style="background-color: var(--color-bg-secondary);">
          {%- for child in entry.children %}{{ renderNavListItem(child) }}{% endfor -%}
          </div>
        </div>
      </div>
    {%- endif -%}
  {%- endif -%}
{%- endmacro %}

<div class="p-0 mt-8 pb-8 mr-1 flex w-full justify-end" style="background-color: var(--color-bg);">
  <div x-data="{ open: false }" class="flex flex-col justify-start md:items-center md:flex-row">

    <nav x-ref="dropdown" :class="{'flex': open, 'hidden': !open}" class="hidden md:block mt-4 mr-2 justify-end flex-col flex-grow pb-4 md:pb-0 hidden md:flex md:flex-row">
    {%- for entry in navPages %}
    {{ renderNavListItem(entry,'child') }}
    {%- endfor -%}
    </nav>

    <nav id="navigation" class="md:hidden h-screen fixed inset-y-0 overflow-x-hidden overflow-y-auto hidden w:64 lg:w-72 mt-20 md:block flex-none top-0 p-4 w-64" style="background-color: var(--color-bg); border-bottom: 1px solid var(--color-border);">
        <button name="Close navigation" onclick="closeNavigation()" class="float-right justify-end block md:hidden -mr-4 p-6"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" style="color: var(--color-text-secondary);"><path fill="currentColor" d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"/></svg></button>
        <div class="clear-right">
          <a href="/">
          <div class="block md:hidden pt-4 font-semibold" style="color: var(--color-text); font-family: 'Courier New', Courier, monospace;">{{ site.name }}</div>
          <div class="block md:hidden text-sm mb-4" style="color: var(--color-text-secondary); font-family: 'Courier New', Courier, monospace;">{{ site.subtitle }}</div>
          </a>
          {{ collections.all | eleventyNavigation | eleventyNavigationToHtml({anchorClass: "item",activeAnchorClass: "active",activeListItemClass: "active",activeKey: eleventyNavigation.key, listClass: "nav", listItemClass: "item"}) | safe }}
        </div>
      </nav>
  </div>
</div>


