<div class="flex w-full">
  <div class="w-full rounded shadow-lg p-8 md:max-w-lg md:mx-auto" style="background-color: var(--color-bg-secondary);">
    <form name="contact" class="mb-4 md:flex md:flex-wrap md:justify-between" action="/" method="post"  netlify>
    <h1 style="color: var(--color-text);">Send a message</h1>
      <div class="flex flex-col mb-4 md:w-1/2">
        <label class="mb-2 uppercase tracking-wide font-bold text-lg md:mr-2" style="color: var(--color-text);" for="first_name">First Name</label>
        <input class="py-2 px-3 md:mr-2" style="background-color: var(--color-bg); border: 1px solid var(--color-border); color: var(--color-text);" type="text" name="first_name" id="first_name">
      </div>
      <div class="flex flex-col mb-4 md:w-1/2">
        <label class="mb-2 uppercase font-bold text-lg md:ml-2" style="color: var(--color-text);" for="last_name">Last Name</label>
        <input class="py-2 px-3 md:ml-2" style="background-color: var(--color-bg); border: 1px solid var(--color-border); color: var(--color-text);" type="text" name="last_name" id="last_name">
      </div>
      <div class="flex flex-col mb-4 md:w-full">
        <label class="mb-2 uppercase font-bold text-lg" style="color: var(--color-text);" for="email">Email</label>
        <input class="py-2 px-3" style="background-color: var(--color-bg); border: 1px solid var(--color-border); color: var(--color-text);" type="email" name="email" id="email">
      </div>
      <div class="flex flex-col mb-6 md:w-full">
        <label class="mb-2 uppercase font-bold text-lg" style="color: var(--color-text);" for="message">Message</label>
        <textarea class="py-2 px-3" style="background-color: var(--color-bg); border: 1px solid var(--color-border); color: var(--color-text);" name="message" id="message" placeholder="Write your message here" rows="7" required></textarea>
      </div>
      <button class="block uppercase text-lg mx-auto p-4 rounded" style="background-color: var(--color-link); color: white;" type="submit">Send message</button>
    </form>
  </div>
</div>
